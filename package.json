{
  "type": "module",
  "scripts": {
    "commitlint": "commitlint --edit",
	  "lint": "pnpm dlx oxlint && pnpm dlx eslint",
		"format": "biome format --write .",
		"deps": "pnpm dlx npm-check-updates@latest --interactive --format group",
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.6.4",
    "@biomejs/biome": "^1.5.1",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@stylistic/eslint-plugin": "^1.5.4",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.*",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-tailwindcss": "3.14.2",
    "lint-staged": "^15.*",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint-staged",
    "pre-push": "echo 'Pre-push'",
    "commit-msg": "pnpm run commitlint ${1}"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,json,jsonc}": [
      "eslint --fix",
      "git add"
    ]
  }
}
